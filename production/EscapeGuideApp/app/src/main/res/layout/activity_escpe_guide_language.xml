<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_language"
    android:gravity="center"
    android:orientation="vertical">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please select prefered language"
        android:textColor="#ffffffff"
        android:textSize="22sp"
        android:layout_marginTop="250dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        android:layout_marginTop="15dp">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="50dp"
            android:textSize="22sp"
            android:textColor="#ffffffff"
            android:text="Greek"
            android:id="@+id/greek_button"
            android:drawableBottom="@drawable/ic_greece"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="English"
            android:textSize="22sp"
            android:textColor="#ffffffff"
            android:id="@+id/english_button"
            android:drawableBottom="@drawable/ic_united_kingdomgreat_britain"/>

        </LinearLayout>


</LinearLayout>
