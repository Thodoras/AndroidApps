<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_background_menu"
    android:gravity="center"
    android:id="@+id/button_overview">


    <ImageView
        android:layout_width="320dp"
        android:layout_height="171dp"
        android:scaleType="fitXY"
        android:layout_marginBottom="20dp"
        android:src="@drawable/ic_overview"
        android:id="@+id/overview_button"
        android:layout_marginTop="-15dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="-10dp"
        android:layout_marginBottom="20dp">

        <ImageView
            android:layout_width="150dp"
            android:layout_height="80dp"
            android:scaleType="fitXY"
            android:src="@drawable/ic_sights"
            android:id="@+id/sights_button"
            android:layout_marginRight="20dp"/>

        <ImageView
            android:layout_width="150dp"
            android:layout_height="80dp"
            android:scaleType="fitXY"
            android:id="@+id/routes_button"
            android:src="@drawable/ic_routes"/>


        </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="-10dp">

        <ImageView
            android:layout_width="150dp"
            android:layout_height="80dp"
            android:scaleType="fitXY"
            android:src="@drawable/ic_hotspots"
            android:id="@+id/hotspots_button"
            android:layout_marginRight="20dp"/>

        <ImageView
            android:layout_width="150dp"
            android:layout_height="80dp"
            android:scaleType="fitXY"
            android:id="@+id/offers_button"
            android:src="@drawable/ic_offers"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="-90dp"
        android:layout_marginTop="-10dp">

        <ImageView
            android:layout_width="150dp"
            android:layout_height="80dp"
            android:scaleType="fitXY"
            android:src="@drawable/ic_gastronomy"
            android:id="@+id/gastronomy_button"
            android:layout_marginRight="20dp"/>

        <ImageView
            android:layout_width="150dp"
            android:layout_height="80dp"
            android:scaleType="fitXY"
            android:src="@drawable/ic_info"
            android:id="@+id/info_button"/>

        </LinearLayout>


</LinearLayout>